{
  "openapi": "3.0.0",
  "info": {
    "title": "Inventory API",
    "version": "1.0.0",
    "description": "API for managing items, suppliers, categories, and generating inventory reports."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    },
    {
      "url": "https://zentiels-inventory.vercel.app/api/v1"
    }
  ],
  "paths": {
    "/items": {
      "get": {
        "summary": "Get all items",
        "responses": {
          "200": {
            "description": "List of items"
          }
        }
      },
      "post": {
        "summary": "Create an item",
        "responses": {
          "201": {
            "description": "Item created"
          }
        }
      }
    },
    "/items/{id}": {
      "get": {
        "summary": "Get item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": { "description": "Item found" },
          "404": { "description": "Item not found" }
        }
      },
      "put": {
        "summary": "Update item",
        "responses": {
          "200": { "description": "Updated" }
        }
      },
      "delete": {
        "summary": "Delete item",
        "responses": {
          "200": { "description": "Deleted" }
        }
      }
    },
    "/suppliers": {
      "get": {
        "summary": "Get all suppliers",
        "responses": { "200": { "description": "List of suppliers" } }
      },
      "post": {
        "summary": "Create supplier",
        "responses": { "201": { "description": "Supplier created" } }
      }
    },
    "/categories": {
      "get": {
        "summary": "Get all categories",
        "responses": { "200": { "description": "List of categories" } }
      }
    },
    "/reports/inventory": {
      "get": {
        "summary": "Inventory report",
        "responses": { "200": { "description": "Report generated" } }
      }
    }
  }
}