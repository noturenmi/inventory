{
  "openapi": "3.0.0",
  "info": {
    "title": "Inventory System API",
    "version": "1.0.0",
    "description": "API documentation for Inventory System"
  },
  "tags": [
    { "name": "Items", "description": "Operations about inventory items" },
    { "name": "Categories", "description": "Operations about categories" },
    { "name": "Suppliers", "description": "Operations about suppliers" }
  ],
  "paths": {
    "/api/v1/items": {
      "get": {
        "tags": ["Items"],
        "summary": "Get all items",
        "responses": {
          "200": { "description": "List of items" }
        }
      },
      "post": {
        "tags": ["Items"],
        "summary": "Add new item",
        "responses": {
          "201": { "description": "Item created" }
        }
      }
    },
    "/api/v1/items/{id}": {
      "get": {
        "tags": ["Items"],
        "summary": "Get item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Item details" }
        }
      },
      "put": {
        "tags": ["Items"],
        "summary": "Update item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Item updated" }
        }
      },
      "delete": {
        "tags": ["Items"],
        "summary": "Delete item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Item deleted" }
        }
      }
    },
    "/api/v1/categories": {
      "get": {
        "tags": ["Categories"],
        "summary": "Get all categories",
        "responses": {
          "200": { "description": "List of categories" }
        }
      },
      "post": {
        "tags": ["Categories"],
        "summary": "Add new category",
        "responses": {
          "201": { "description": "Category created" }
        }
      }
    },
    "/api/v1/categories/{id}": {
      "put": {
        "tags": ["Categories"],
        "summary": "Update category",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": { "200": { "description": "Category updated" } }
      },
      "delete": {
        "tags": ["Categories"],
        "summary": "Delete category",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Category deleted" }
        }
      }
    },
    "/api/v1/suppliers": {
  "get": {
    "tags": ["Suppliers"],
    "summary": "Get all suppliers",
    "responses": {
      "200": { "description": "List of suppliers" }
    }
  },
  "post": {
    "tags": ["Suppliers"],
    "summary": "Add new supplier",
    "responses": {
      "201": { "description": "Supplier created" }
    }
  }
},
"/api/v1/suppliers/{id}": {
   "put": {
        "tags": ["Suppliers"],
        "summary": "Update supplier by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "contact": { "type": "string" },
                  "phone": { "type": "string" },
                  "address": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Supplier updated" } }
      },
  "delete": {
    "tags": ["Suppliers"],
    "summary": "Delete supplier",
    "parameters": [
      {
        "name": "id",
        "in": "path",
        "required": true,
        "schema": { "type": "string" }
      }
    ],
    "responses": {
      "200": { "description": "Supplier deleted" }
    }
  }
}
}
}