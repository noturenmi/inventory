{
  "openapi": "3.0.0",
  "info": {
    "title": "Inventory System API",
    "version": "1.0.0",
    "description": "API documentation for Inventory System"
  },
  "tags": [
    { "name": "Items", "description": "Operations about inventory items" },
    { "name": "Categories", "description": "Operations about categories" },
    { "name": "Suppliers", "description": "Operations about suppliers" }
  ],
  "paths": {
    "/api/v1/items": {
      "get": {
        "tags": ["Items"],
        "summary": "Get all items",
        "responses": {
          "200": { "description": "List of items" }
        }
      },
      "post": {
        "tags": ["Items"],
        "summary": "Create a new item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "category": { "type": "string" },
                  "supplier": { "type": "string" },
                  "stock": { "type": "number" }
                },
                "required": ["name","category","supplier","stock"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Item created" } }
      }
    },

     "/api/v1/items/{id}": {
      "get": {
        "tags": ["Items"],
        "summary": "Get item by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "string"}
          }
        ],
        "responses": { "200": { "description": "Item details" } }
      },
        "put": {
        "tags": ["Items"],
        "summary": "Update an item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "category": { "type": "string" },
                  "supplier": { "type": "string" },
                  "stock": { "type": "number" }
                }
              },
              "example": {
                "name": "Updated Keyboard",
                "category": "Accessories",
                "supplier": "Supplier C",
                "stock": 50
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Item updated" }
        }
      },
      "delete": {
        "tags": ["Items"],
        "summary": "Delete item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Item deleted" } }
      }
    },

