  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "prod_1"
          },
          "name": {
            "type": "string",
            "example": "Wireless Mouse"
          },
          "quantity": {
            "type": "integer",
            "example": 50
          },
          "price": {
            "type": "number",
            "example": 29.99
          },
          "stock": {
            "type": "integer",
            "example": 50
          },
          "description": {
            "type": "string",
            "example": "Ergonomic wireless mouse"
          },
          "category": {
            "type": "string",
            "example": "Electronics"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ProductInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Wireless Mouse"
          },
          "quantity": {
            "type": "integer",
            "example": 50
          },
          "price": {
            "type": "number",
            "example": 29.99
          },
          "stock": {
            "type": "integer",
            "example": 50
          }
        }
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Updated Product Name"
          },
          "quantity": {
            "type": "integer",
            "example": 100
          },
          "price": {
            "type": "number",
            "example": 39.99
          },
          "stock": {
            "type": "integer",
            "example": 100
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "order_1"
          },
          "orderId": {
            "type": "string",
            "example": "ORD001"
          },
          "productId": {
            "type": "string",
            "example": "prod_1"
          },
          "productName": {
            "type": "string",
            "example": "Wireless Mouse"
          },
          "quantity": {
            "type": "integer",
            "example": 2
          },
          "unitPrice": {
            "type": "number",
            "example": 29.99
          },
          "totalPrice": {
            "type": "string",
            "example": "59.98"
          },
          "customerName": {
            "type": "string",
            "example": "John Doe"
          },
          "customerEmail": {
            "type": "string",
            "example": "john@example.com"
          },
          "status": {
            "type": "string",
            "example": "pending",
            "enum": ["pending", "processing", "completed", "cancelled"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OrderInput": {
        "type": "object",
        "required": ["productId", "quantity"],
        "properties": {
          "productId": {
            "type": "string",
            "example": "prod_1"
          },
          "quantity": {
            "type": "integer",
            "example": 2,
            "minimum": 1
          },
          "customerName": {
            "type": "string",
            "example": "John Doe"
          },
          "customerEmail": {
            "type": "string",
            "example": "john@example.com"
          }
        }
      },
      "OrderUpdate": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "cancelled"],
            "example": "processing"
          },
          "quantity": {
            "type": "integer",
            "example": 3
          }
        }
      },
      "Supplier": {
