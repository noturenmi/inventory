{
  "openapi": "3.0.4",
  "info": {
    "title": "Inventory Management API",
    "version": "1.0.1",
    "description": "API documentation for the Inventory Management System."
  },
  "servers": [
    {
      "url":  "/swagger/swagger.json",
      "description": "Vercel Serverless Root"
    }
  ],
  "paths": {
    "/api/products": {
      "get": {
        "summary": "Get all products or a single product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Optional product ID to fetch a single product",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Product(s) retrieved successfully" },
          "404": { "description": "Product not found" }
        }
      },
      "post": {
        "summary": "Create a new product",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Product" }
            }
          }
        },
        "responses": {
          "201": { "description": "Product created" },
          "400": { "description": "Invalid input" }
        }
      },
      "put": {
        "summary": "Update a product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "description": "Product ID to update",
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Product" }
            }
          }
        },
        "responses": {
          "200": { "description": "Product updated" },
          "404": { "description": "Product not found" },
          "400": { "description": "Invalid input" }
        }
      },
      "delete": {
        "summary": "Delete a product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "required": true,
            "description": "Product ID to delete",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Product deleted successfully" },
          "404": { "description": "Product not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "quantity": { "type": "integer" },
          "price": { "type": "number" }
        },
        "required": ["name", "quantity", "price"]
      }
    }
  }
}