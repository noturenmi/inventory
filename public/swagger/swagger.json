    "/api-docs": {
      "get": {
        "tags": ["Documentation"],
        "summary": "Swagger UI Documentation",
        "description": "Interactive API documentation",
        "responses": {
          "200": {
            "description": "Swagger UI loaded"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "auto_gen_1_1700000000000"
          },
          "name": {
            "type": "string",
            "example": "Wireless Mouse"
          },
          "quantity": {
            "type": "integer",
            "example": 50
          },
          "price": {
            "type": "number",
            "example": 29.99
          },
          "stock": {
            "type": "integer",
            "example": 50
          },
          "description": {
            "type": "string",
            "example": "Dynamic product description"
          },
          "category": {
            "type": "string",
            "example": "Electronics"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ProductInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Wireless Mouse"
          },
          "quantity": {
            "type": "integer",
            "example": 50
          },
          "price": {
            "type": "number",
            "example": 29.99
          },
          "stock": {
            "type": "integer",
            "example": 50
          }
        }
      },
      "ProductUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Updated Product Name"
          },
          "quantity": {
            "type": "integer",
            "example": 100
          },
          "price": {
            "type": "number",
            "example": 39.99
          },
          "stock": {
            "type": "integer",
            "example": 100
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "order_1700000000000"
          },
          "orderId": {
            "type": "string",
            "example": "ORD123456"
          },
          "productId": {
            "type": "string",
            "example": "prod_1"
          },
          "productName": {
            "type": "string",
            "example": "Wireless Mouse"
          },
          "quantity": {
            "type": "integer",
            "example": 2
          },
          "unitPrice": {
            "type": "number",
            "example": 29.99
          },
          "totalPrice": {
            "type": "string",
            "example": "59.98"
          },
          "customerName": {
            "type": "string",
            "example": "John Doe"
          },
          "customerEmail": {
            "type": "string",
            "example": "john@example.com"
          },
          "status": {
            "type": "string",
            "example": "pending",
            "enum": ["pending", "processing", "completed", "cancelled"]
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "OrderInput": {
        "type": "object",
        "required": ["productId", "quantity"],
        "properties": {
          "productId": {
            "type": "string",
            "example": "prod_1"
          },
          "quantity": {
            "type": "integer",
            "example": 2,
            "minimum": 1
          },
          "customerName": {
            "type": "string",
            "example": "John Doe"
          },
          "customerEmail": {
            "type": "string",
            "example": "john@example.com"
          }
        }
      },
      "OrderUpdate": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "enum": ["pending", "processing", "completed", "cancelled"],
            "example": "processing"
          },
          "quantity": {
            "type": "integer",
            "example": 3
          }
        }
      },
      "Supplier": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "supplier_1"
          },
          "name": {
            "type": "string",
            "example": "Tech Supplies Inc."
          },
          "contactPerson": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@techsupplies.com"
          },
          "phone": {
            "type": "string",
            "example": "+1234567890"
          },
          "address": {
            "type": "string",
            "example": "123 Main St, City, Country"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SupplierInput": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Tech Supplies Inc."
          },
          "contactPerson": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@techsupplies.com"
          },
          "phone": {
            "type": "string",
            "example": "+1234567890"
          },
          "address": {
            "type": "string",
            "example": "123 Main St, City, Country"
          }
        }
      },
      "SupplierUpdate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "contactPerson": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "address": {
            "type": "string"
          }
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "The requested resource was not found"
      },
      "ValidationError": {
        "description": "Invalid input data provided"
      },
      "ServerError": {
        "description": "Internal server error"
      }
    }
  },
  "externalDocs": {
    "description": "GitHub Repository",
    "url": "https://github.com/noturenmi/inventory"
  }
}